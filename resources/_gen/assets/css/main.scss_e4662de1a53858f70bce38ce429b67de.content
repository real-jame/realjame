:root {
  color-scheme: light dark;
}

.highlight pre {
  border-radius: 5px;
  padding: 1em;
  overflow: auto;
}

.sidebar {
  float: left;
  width: 200px;
  margin: 20px;
  padding: 10px;
  border: solid;
}

main {
  max-width: 650px;
  margin: 40px auto;
  line-height: 1.4;
  font-size: 16px;
}
main img {
  max-width: 100%;
}

footer {
  clear: both;
  text-align: center;
}